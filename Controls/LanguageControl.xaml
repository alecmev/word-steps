<UserControl x:Class="WordSteps.LanguageControl"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    FontFamily="{StaticResource PhoneFontFamilyNormal}"
    FontSize="{StaticResource PhoneFontSizeNormal}"
    Foreground="{StaticResource PhoneForegroundBrush}"
    d:DesignHeight="48" VerticalAlignment="Top">

    <Grid x:Name="LayoutRoot" Height="48">
        <Button Click="LanguageControlClick">
            <Button.Template>
                <ControlTemplate>
                    <Border Height="48" Opacity="0.8" Background="{StaticResource WordStepsDarkAccentBrush}">
                        <TextBlock Margin="24, 0, 0, 0" VerticalAlignment="Center" Foreground="{StaticResource WordStepsAntiAccentBrush}" Text="{Binding Languages, Mode=OneWay}" />
                    </Border>
                </ControlTemplate>
            </Button.Template>
        </Button>
    </Grid>
    
</UserControl>
